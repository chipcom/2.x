    //       //   fl := (lprofil_k == 16 .and. ; // пациент лежит на геронтологической койке
    //       //           !(_lshifr == "st38.001") .and. ;//!(alltrim(arr_diag[1]) == "R54") .and. ; // с основным диагнозом не <R54-старость>
